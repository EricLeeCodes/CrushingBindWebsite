<a href="@($"/archives/{ArchiveModel.ArchiveChapterNumber.ConvertTitleToURL().ToLowerInvariant()}/{Post.Title.ConvertTitleToURL().ToLowerInvariant()}")">
    <div class="card flex-md-row mb-4 shadow">
        <img src="@($"{APIEndpoints.ServerBaseUrl}/{Post.ArchiveThumbnailImagePath}")"
             class="card-img-left flex-auto d-lg-block archive-image"
             alt="Chapter 1 thumbnail image" />
        <div class="card-body archive-body d-flex flex-column align-items-center">
            <h3>@Post.Title</h3>
        </div>
    </div>
</a>


@code
{
    [Parameter] public Post Post { get; set; }
    [Parameter] public ArchiveModel ArchiveModel { get; set; }
}